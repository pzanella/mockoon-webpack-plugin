{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "outDir": "lib",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": false
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/__tests__/"
    ]
}