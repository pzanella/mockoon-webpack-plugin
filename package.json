{
  "name": "mockoon-webpack-plugin",
  "version": "1.2.1",
  "description": "A Webpack plugin to run Mockoon CLI.",
  "homepage": "https://github.com/pzanella/mockoon-webpack-plugin",
  "types": "./lib/index.d.ts",
  "main": "./lib/index.js",
  "author": "Pietro Zanella <pietrozanella22@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "lib/**/*",
    "LICENSE.md"
  ],
  "keywords": [
    "webpack",
    "plugin",
    "mockoon-cli",
    "mock-server",
    "local-server",
    "mockoon-webpack-plugin"
  ],
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "badges": "generateBadges",
    "prepare": "husky install",
    "release": "np --tag",
    "clean": "rm -rf ./lib",
    "build": "npm run clean && npx tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json"
  },
  "dependencies": {
    "@mockoon/cli": "^2.2.1",
    "chalk": "4.1.2",
    "find-free-ports": "^3.0.0",
    "schema-utils": "^4.0.0"
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "node-jest-badges": "^1.3.1",
    "np": "^7.6.0",
    "prettier": "^2.8.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.4"
  },
  "peerDependencies": {
    "webpack": ">=4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pzanella/mockoon-webpack-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/pzanella/mockoon-webpack-plugin/issues"
  }
}
