{
  "name": "mockoon-webpack-plugin",
  "version": "1.2.1",
  "description": "A Webpack plugin based on Mockoon CLI.",
  "homepage": "https://github.com/pzanella/mockoon-webpack-plugin",
  "repository": {
    "type": "git",
    "url": "https://github.com/pzanella/mockoon-webpack-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/pzanella/mockoon-webpack-plugin/issues"
  },
  "types": "./lib/index.d.ts",
  "main": "./lib/index.js",
  "author": "Pietro Zanella <pietrozanella22@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "lib/**/*",
    "LICENSE.md"
  ],
  "keywords": [
    "webpack",
    "plugin",
    "mockoon-cli",
    "mock-server",
    "local-server",
    "mockoon-webpack-plugin"
  ],
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "npm run clean && npx tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jest.config.js",
    "test:coverage": "jest --coverage --config jest.config.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "release": "np"
  },
  "dependencies": {
    "@mockoon/cli": "^2.2.1",
    "chalk": "4.1.2",
    "find-free-ports": "^3.0.0",
    "unique-filename": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "jest": "^29.3.1",
    "np": "^7.6.0",
    "prettier": "^2.8.2",
    "ts-jest": "^29.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.4"
  },
  "peerDependencies": {
    "webpack": ">=4.0.0"
  }
}
